<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Test All Fields"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <well
                jcr:primaryType="nt:unstructured"
                jcr:title="Accordion Section"
                sling:resourceType="granite/ui/components/coral/foundation/well">
                <items jcr:primaryType="nt:unstructured">
                    <myTabs
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/tabs">
                        <items jcr:primaryType="nt:unstructured">
                            <general
                                jcr:primaryType="nt:unstructured"
                                jcr:title="General"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <tabId
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Tab ID"
                                        name="./tabId"/>
                                </items>
                            </general>
                            <allFields
                                jcr:primaryType="nt:unstructured"
                                jcr:title="All Fields"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <accordion
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/accordion">
                                        <items jcr:primaryType="nt:unstructured">
                                            <item1
                                                jcr:primaryType="nt:unstructured"
                                                jcr:title="Accordion Item 1"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <fieldsName
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldLabel="Fields Name"
                                                        name="./fieldsName"/>
                                                    <fieldsInfo
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                        fieldLabel="Fields Info"
                                                        name="./fieldsInfo"/>
                                                </items>
                                            </item1>
                                            <item2
                                                jcr:primaryType="nt:unstructured"
                                                jcr:title="Accordion Item 2"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <alert
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/alert"
                                                        closeable="{Boolean}true"
                                                        text="This is a warning alert. Please proceed with caution!"
                                                        title="Attention!"
                                                        variant="warning"/>
                                                    <checkBox
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        checkedValue="true"
                                                        fieldDescription="To test CheckBox"
                                                        name="./checkBox"
                                                        text="Is it CheckBox"
                                                        tooltipPosition="top"
                                                        uncheckedValue="false"/>
                                                    <select
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        emptyText="Select Color"
                                                        fieldDescription="Choose a color from the dropdown"
                                                        fieldLabel="Select The Color"
                                                        name="./select">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <item1
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Red"
                                                                value="red"/>
                                                            <item2
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Green"
                                                                value="green"/>
                                                            <item3
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Blue"
                                                                value="blue"/>
                                                        </items>
                                                    </select>
                                                    <pathBrowser
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                        fieldLabel="Path Browser"
                                                        name="./pathBrowser"/>
                                                </items>
                                            </item2>
                                            <item3
                                                jcr:primaryType="nt:unstructured"
                                                jcr:title="Accordion Item 3"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <heading
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/heading"
                                                        level="3"
                                                        text="AllFieldChecking"/>
                                                    <hidden
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                                        name="./hiddenField"
                                                        value="test"/>
                                                    <multifield
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                        composite="{Boolean}true"
                                                        fieldLabel="Multifield-Name">
                                                        <field
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                                            name="./multifield">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <fieldsInfo
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                                    fieldLabel="Fields Info"
                                                                    name="./fieldsInfo"/>
                                                                <radiogroup
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                                                    name="./radiogroup"
                                                                    vertical="{Boolean}true">
                                                                    <items jcr:primaryType="nt:unstructured">
                                                                        <radio1
                                                                            jcr:primaryType="nt:unstructured"
                                                                            text="Radio1"
                                                                            value="radio1"/>
                                                                        <radio2
                                                                            jcr:primaryType="nt:unstructured"
                                                                            text="Radio2"
                                                                            value="radio2"/>
                                                                        <radio3
                                                                            jcr:primaryType="nt:unstructured"
                                                                            text="Radio3"
                                                                            value="radio3"/>
                                                                    </items>
                                                                </radiogroup>
                                                                <colorField
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                                    emptyText="Enter the field color"
                                                                    fieldLabel="ColorFields Info"
                                                                    name="./colorField"/>
                                                            </items>
                                                        </field>
                                                    </multifield>
                                                </items>
                                            </item3>
                                        </items>
                                    </accordion>
                                </items>
                            </allFields>
                            <addComponent
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Add Component"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <componentName
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Component Name"
                                        name="./componentName"/>
                                    <pathfield
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                        emptyText="Select the image path"
                                        fieldLabel="Pathfield"
                                        name="./pathfield"
                                        rootPath="/content/dam/newsportal/images"/>
                                </items>
                            </addComponent>
                            <include
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                path="newsportal/components/article-banner"/>
                        </items>
                    </myTabs>
                </items>
            </well>
        </items>
    </content>
</jcr:root>
