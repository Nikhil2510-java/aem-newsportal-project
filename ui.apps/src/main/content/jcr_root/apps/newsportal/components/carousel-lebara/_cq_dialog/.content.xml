<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Carousel-Lebara"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[core.wcm.components.commons.editor.dialog.childreneditor.v1,core.wcm.components.carousel.v1.editor,lebara.dialog.styles]"
    helpPath="https://www.adobe.com/go/aem_cmp_carousel_v1"
    trackingFeature="core-components:carousel:v1">
    <content
        granite:class="cmp-carousel__editor"
        jcr:primaryType="nt:unstructured">
        <items jcr:primaryType="nt:unstructured">
            <tabs jcr:primaryType="nt:unstructured">
                <items jcr:primaryType="nt:unstructured">
                    <design
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Design"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <showNextPrevButtons
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                text="Show Next / Prev Buttons"
                                                fieldDescription="If checked, show the next and previous buttons."
                                                name="./showNextPrevButtons"
                                                uncheckedValue="false"
                                                value="true">
                                            </showNextPrevButtons>
                                            <carouselColor
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                granite:class="lebara-multifield__editor"
                                                jcr:primaryType="nt:unstructured"
                                                jcr:title="Carousel Color - Per Panel"
                                                fieldLabel="Carousel Color - Per Panel"
                                                composite="{Boolean}true">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    name="./carouselColor">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <column
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <dotsBackgroundColor
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                                    fieldLabel="Dots Background Color"
                                                                    name="./dotsBackgroundColor"/>
                                                                <carouselbackgroundColor
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                                    fieldLabel="Carousel Background Color"
                                                                    name="./carouselbackgroundColor"/>
                                                            </items>
                                                        </column>
                                                    </items>
                                                </field>
                                            </carouselColor>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </design>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
